<% if params[:controller] == "rides" && params[:action] == "edit" && @ride.course_id = 45 %>
  <div style= '<%= style_list %>'
    data-controller="ride-map-demo"
    data-ride-map-demo-route-value="<%= course.route %>"
    data-ride-map-demo-courselocation-value="<%= [course.longitude, course.latitude] %>"
    data-ride-map-demo-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    <div id="instructions" data-ride-map-demo-target="instruction" style="height: 150px;" class="opacity-0"></div>
  </div>
<% elsif params[:controller] == "rides" && params[:action] == "edit" %>
  <div style= '<%= style_list %>'
    data-controller="ride-map-demo"
    data-ride-map-demo-markers-value="<%= [{ lat: course.latitude, lng: course.longitude }].to_json %>"
    data-ride-map-demo-route-value="<%= course.route %>"
    data-ride-map-demo-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
<% elsif params[:controller] == "rides" && params[:action] == "map" %>
  <div style= '<%= style_list %>'
    data-controller="index-map"
    data-index-map-markers-value="<%= markers.to_json%>"
    data-index-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
<% elsif params[:course_id] == "45" %>
  <div style= '<%= style_list %>'
    data-controller="navigate-demo"
    data-navigate-demo-course-value="<%= [{ lat: course.latitude, lng: course.longitude }].to_json %>"
    data-navigate-demo-markers-value="<%= markers.to_json%>"
    data-navigate-demo-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    <div id="instructions" data-navigate-demo-target="instruction" style="height: 150px;"></div>
  </div>
<% elsif params[:controller] == "rides" && params[:action] == "navigate" %>
  <div style= '<%= style_list %>'
    data-controller="navigate-demo"
    data-navigate-demo-course-value="<%= [{ lat: course.latitude, lng: course.longitude }].to_json %>"
    data-navigate-demo-markers-value="<%= markers.to_json%>"
    data-navigate-demo-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    <div id="instructions" data-navigate-demo-target="instruction"></div>
  </div>
<% elsif params[:controller] == "courses" && params[:action] == "show"%>
  <div style= '<%= style_list %>'
    data-controller="course-map"
    data-course-map-markers-value="<%= [{ lat: course.latitude, lng: course.longitude }].to_json %>"
    data-course-map-route-value="<%= course.route %>"
    data-course-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
<% elsif params[:controller] == "rides" %>
  <div style= '<%= style_list %>'
    data-controller="course-map"
    data-course-map-markers-value="<%= [{ lat: course.latitude, lng: course.longitude }].to_json %>"
    data-course-map-route-value="<%= course.route %>"
    data-course-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
<% end %>
