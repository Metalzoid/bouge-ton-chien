<div class="navbar navbar-expand-lg bg-white w-100" id="topbar">
  <div class="container-fluid w-100 justify-content-center align-items-center">
    <% count = rand(1..4) %>
    <% if user_signed_in? %>
      <%= link_to root_path, class: "logo" do %>
        <%= image_tag "#{count}.png", class: "image-logo" %>
      <% end %>
    <% end %>
    <% if user_signed_in? %>
      <% if params[:controller] == "courses" && params[:action] == "index" %>
        <h1 style="color: #d19b62; margin-top: 40px !important;">Bienvenue <%= current_user.firstname %></h1>
      <% elsif params[:controller] == "courses" && params[:action] == "show" %>
        <h1 style="color: #d19b62;"><%= @course.name %></h1>
      <% elsif params[:controller] == "rides" && params[:action] == "edit" %>
        <h1 style="color: #d19b62;">En route !</h1>
      <% elsif params[:controller] == "rides" && params[:action] == "navigate" %>
        <h1 style="color: #d19b62; margin-top: 40px !important;">En route vers <%= @course.name %></h1>
      <% elsif params[:controller] == "rides" && params[:action] == "show" %>
        <h1 style="color: #d19b62;">Votre ride</h1>
      <% elsif params[:controller] == "users" && params[:action] == "show" %>
        <h1 style="color: #d19b62;">Votre profil</h1>
      <% elsif params[:controller] == "dogs" && params[:action] == "index" %>
        <h1 style="color: #d19b62;">Votre meute</h1>
      <% elsif params[:controller] == "rewards" && params[:action] == "index" %>
        <h1 style="color: #d19b62;">Récompenses</h1>
      <% elsif params[:controller] == "user_rewards" && params[:action] == "index" %>
        <h1 style="color: #d19b62; margin-top: 40px !important;">Vos Récompenses</h1>
      <% elsif params[:controller] == "rides" && params[:action] == "map" %>
        <h1 style="color: #d19b62; margin-top: 40px !important;">Les courses autour de vous !</h1>
      <% end %>
    <% else %>
      <%= link_to root_path do %>
        <%= image_tag "#{count}.png", height: "100px" %>
      <% end %>
    <% end %>
    <% if user_signed_in? %>
      <small class="doogs-container" style="color: #895f33; font-weight: 600; font-size: 17px;"><%= current_user.money %><%= link_to "D", rewards_path, class: "doogs nav-link" %></small>
    <% end %>
  </div>
</div>
