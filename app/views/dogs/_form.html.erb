<button data-bs-toggle="modal" data-bs-target="#modalForm">New dog</button>
<div id="modalForm" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true" data-modal-dog-target="modal">
  <div class="modal-dialog modal-dialog-centered modal-xl mt-5">
    <div class="modal-content">
      <div class="modal-header position-relative d-flex justify-content-between">
        <h5 class="modal-title font-18">Ajouter un chien</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <%= simple_form_for [current_user, dog], method: :post, data: { modal_dog_target: "form", action: "submit->modal-dog#update"} do |f| %>
            <%= f.error_notification %>
            <div class="form-inputs">
              <%= f.input :name, required: true, label: "Nom" %>
              <%= f.input :race, required: true %>
              <%= f.input :age, required: true %>
              <%= f.input :photo, as: :file, required: true %>
            </div>
            <div class="form-actions d-flex justify-content-center">
              <%= f.button :submit, "Ajouter Ã  la meute", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
