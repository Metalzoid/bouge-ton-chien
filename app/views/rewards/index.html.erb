<div class="container w-100">
  <div class="p-3 border-bottom mt-2 mb-2">
    <%= render "doogcount" %>
  </div>

  <div class="p-3 d-flex flex-column align-items-center">
      <h2 class="font-weight-bold">Mes achats<i class="fa-solid fa-cart-shopping" style="color: #895f33;"></i></h2>
      <%= link_to "Voir mes Achats", user_user_rewards_path(current_user), class: "mt-2 dropdown-filters simpleButton", id: "buttonAchat" %>
  </div>

  <div class="p-3 d-flex flex-column align-items-center">
    <h2 class="font-weight-bold">Les bons plans  <i class="fa-solid fa-coins"></i></h2>
  </div>

  <div class="container">
    <%= render "doogpresents", rewards: @rewards.where('money BETWEEN ? AND ?', 50, 100), filter: 50 %>
  </div>

  <div class="container">
    <%= render "doogpresents", rewards: @rewards.where('money BETWEEN ? AND ?', 100, 150), filter: 100 %>
  </div>

  <div class="container">
    <%= render "doogpresents", rewards: @rewards.where('money BETWEEN ? AND ?', 150, 200), filter: 150 %>
  </div>

  <div class="container">
    <%= render "doogpresents", rewards: @rewards.where('money >= ?', 200), filter: 200 %>
  </div>
</div>
