<div class="modal fade modalDetails" id="modalDetails<%= reward.id %>" tabindex="-1" aria-labelledby="modal avis" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-body border-0 p-0">
        <div class="card cardActive" style="height: 600px;">
          <%= cl_image_tag(reward.photo.key, height: 280, crop: "fill")if reward.photo.present? %>
          <div class="card-body px-0 py-1">
            <h4 class="card-title text-center"><%= reward.name %></h4>
            <p class="card-text"><%= reward.description %></p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item1"><%= reward.price %> €</li>
            <li class="list-group-item1" style="text-decoration: none;"><%= reward.reduction %> %</li>
            <li class="list-group-item"><%= ((reward.price * (100 - reward.reduction)) / 100.0).round(2) %> €</li>
          </ul>
          <%= link_to "Sélectionner", user_rewards_path(user_reward: { reward_id: reward.id, user_id: current_user.id }), data: { 'turbo-method' => :post }, class: "simpleButton" %>
        </div>
      </div>
    </div>
  </div>
</div>
